<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.13">
            <include
                android:id="@+id/mainPage"
                layout="@layout/content_main"/>
            <include
                android:id="@+id/writePage"
                layout="@layout/write_page"/>
            <include
                android:id="@+id/articlePage"
                layout="@layout/article_page"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/btnMainPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/calendarOn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ON"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/trackRecord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RECORD"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/goWritePage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/new_article"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnWritePage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/galButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gallary_button"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/camButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/camera_button"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/save_button"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
